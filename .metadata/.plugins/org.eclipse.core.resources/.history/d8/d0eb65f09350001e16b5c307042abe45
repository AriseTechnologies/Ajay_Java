	int [][]mat1= {{1,2,3},
			       {4,5,6}};
	int [][]mat2= {{9,8,7},
			       {3,2,1}};
	int [][]result= {{0,0,0},
			         {0,0,0}};
	for(int i=0; i<mat1.length; i++) {
		for(int j=0; j<mat1[i].length;j++) {
